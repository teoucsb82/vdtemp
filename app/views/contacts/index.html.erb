<!-- Page content starts -->

<div class="content">
  <div class="container">
    <div class="row"> 
      <div class="col-md-6">
        <!-- Contact form -->
        <h4 class="title">Contact Form</h4>
        <p class="small">Please complete the form below and we will get back to you as soon as possible.</p>
        <%= form_for @contact do |f| %>
          <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name, class: "form-control" %>
          </div>                                    
          <div class="form-group">
            <%= f.label :email %>
            <%= f.text_field :email, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :content %>
            <%= f.text_area :content, class: "form-control" %>
          </div>                                      
          <button type="submit" class="btn btn-primary">Send</button>
          <button type="reset" class="btn btn-default">Reset</button>
        <% end %>
        
      </div>
     <div class="col-md-6">
        <h4 class="title">Google Map</h4>
        <!-- Google maps -->
        <div class="gmap">
           <!-- Google Maps. Replace the below iframe with your Google Maps embed code -->
           <iframe height="200" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="http://maps.google.co.in/maps?f=q&amp;source=s_q&amp;hl=en&amp;geocode=&amp;q=Google+India+Bangalore,+Bennigana+Halli,+Bangalore,+Karnataka&amp;aq=0&amp;oq=google+&amp;sll=9.930582,78.12303&amp;sspn=0.192085,0.308647&amp;ie=UTF8&amp;hq=Google&amp;hnear=Bennigana+Halli,+Bangalore,+Bengaluru+Urban,+Karnataka&amp;t=m&amp;ll=12.993518,77.660294&amp;spn=0.012545,0.036006&amp;z=15&amp;output=embed"></iframe>
        </div>
        
        <hr />
        <!-- Address section -->
        <div class="col-xs-6">
          <h4 class="title">Address</h4>
          <div class="address">
            <address>
              <!-- Company name -->
              <strong>Via Deca, LLC.</strong><br>
              <!-- Address -->
              123 Fake Street<br>
              Santa Monica, CA 90404<br>
              <!-- Phone number -->
              <abbr title="Phone">P:</abbr> (123) 456-7890.
            </address>
          </div>
        </div>
        <div class="col-xs-6">
          <div class="center">
          <!-- Social media icons -->
          <strong>Get in touch:</strong>
          <div class="social">
            <a href="https://www.facebook.com/ViaDeca" target="_blank"><i class="fa fa-facebook facebook"></i></a>
            <a href="http://www.twitter.com/ViaDeca"><i class="fa fa-twitter twitter"></i></a>
            <!-- <a href="#"><i class="fa fa-linkedin linkedin"></i></a>
            <a href="#"><i class="fa fa-google-plus google-plus"></i></a>
            <a href="#"><i class="fa fa-pinterest pinterest"></i></a> -->
          </div>
        </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Page content ends -->