<!-- Header starts -->
<header>
  <div class="container">
    <div class="row">
      <div class="col-md-4 col-sm-3">
        <!-- Logo. Use class "color" to add color to the text. -->
        <div class="logo">
          <div class="row">
            <div class="col-xs-4 col-lg-3"><%= content_tag(:i, "", class: "fa fa-home fa-5x color") %></div>
            <div class="col-xs-8 col-lg-9">
              <h1><a href="<%= root_url %>">Via<span class="color bold">Deca</span></a></h1>
              <p class="meta">Santa Monica Apartments</p>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-8 col-sm-9">
        <!-- Navigation -->
        <div class="navbar bs-docs-nav" role="banner">
          <div class="navbar-header">
            <button class="navbar-toggle" type="button" data-toggle="collapse" data-target=".bs-navbar-collapse">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
          </div>

          <nav class="collapse navbar-collapse bs-navbar-collapse" role="navigation">
            <ul class="nav navbar-nav navbar-right">
              <li><%= link_to "Availabilties", contacts_path %></li>
              <li><%= link_to "Submit Application", new_background_check_path %></li>
              <li><%= link_to "Contact Us", contacts_path %></li>
              <% if user_signed_in? %>
                <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown">My Account <b class="caret"></b></a>
                  <ul class="dropdown-menu">
                    <li><%= link_to 'Edit profile', edit_user_registration_path %></li>
                    <li><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
                  </ul>
                </li>
              <% else %>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">Tenants <b class="caret"></b></a>
                    <ul class="dropdown-menu">
                      <li><%= link_to "Sign up", new_user_registration_path %></li>
                      <li><%= link_to "Login", new_user_session_path %></li>
                    </ul>
                  </li>
              <% end %>
            </ul>
          </nav>
        </div>
        <!--/ Navigation end -->
      </div>
    </div>
  </div>
</header>
<!-- Seperator -->
<div class="sep"></div>
<!--/ Header ends -->