<div class="row">
  <div class="col-md-12">
    <div class="widget wgreen">
      <div class="widget-head">
        <div class="pull-left">Add Property</div>
        <div class="clearfix"></div>
      </div>
      <div class="widget-content">
        <div class="padd">
          <br />

          <!-- Form starts.  -->
          <%= form_for([:admin, @property], :html => {:class => "form-horizontal"}) do |f| %> 
            <div class="form-group">
              <%= f.label :street_address, class: "col-lg-2 control-label" %>

              <div class="col-lg-8">
                <%= f.text_field :street_address, autofocus: true, class: "form-control" %>
              </div>
            </div>

            <div class="form-group">
              <%= f.label :city, class: "col-lg-2 control-label" %>

              <div class="col-lg-4">
                <%= f.text_field :city, class: "form-control" %>
              </div>

              <div class="col-lg-2">
                <%= select_tag :state, options_for_select(us_states, "CA"), class: "form-control" %>
              </div>

              <div class="col-lg-2">
                <%= f.number_field :zip, placeholder: "Zip Code", class: "form-control" %>
              </div>
            </div>

            <div class="form-group">
              <label class="col-lg-2 control-label">Description</label>
              <div class="col-lg-8">
                <%= f.text_area :description, class: "cleditor" %>
              </div>
            </div>                                 
            
            <div class="form-group">
              <div class="col-lg-5 col-lg-offset-2">
                <%= f.submit nil, class: "btn btn-success" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>

      <div class="widget-foot">
        <!-- Footer goes here -->
      </div>
    </div>  
  </div>
</div>
